<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nb"
    android:orientation="vertical"
    tools:context=".note">



    <EditText
        android:id="@+id/ent_name"
        android:layout_width="191dp"
        android:layout_height="47dp"
        android:layout_weight="1"
        android:background="#EDDFB3"
        android:hint="Name"
        android:paddingStart="10dp"
        android:textColor="#000"
        android:textColorHint="@color/black"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.22"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ent_date"
        android:layout_width="191dp"
        android:layout_height="47dp"
        android:layout_weight="1"
        android:background="#EDDFB3"
        android:hint="Date"
        android:paddingStart="10dp"
        android:textColor="#000"
        android:textColorHint="@color/black"
        android:textSize="22sp"
        android:layout_marginStart="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/ent_age"
        android:layout_width="191dp"
        android:layout_height="47dp"
        android:layout_weight="1"
        android:background="#EDDFB3"
        android:hint="Age"
        android:inputType="number"
        android:paddingStart="10dp"
        android:textColor="#000"
        android:textColorHint="@color/black"
        android:textSize="22sp"
        android:layout_marginStart="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.872"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.219"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/ent_reason"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="#CDDFAD"
        android:gravity="center"
        android:text="HOW'S YOUR FEELING TODAY?"
        android:textColor="#000"
        android:textColorHint="#121212"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.431"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/mood1"
        android:layout_width="191dp"
        android:layout_height="47dp"
        android:background="#EDDFB3"
        android:text="Mood"
        android:textColor="#000"
        android:gravity="center_vertical"
        android:textColorHint="@color/black"
        android:textSize="22dp"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.308" />

    <EditText
        android:id="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="You can share your thoughts here..."
        android:textSize="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <Button
        android:id="@+id/button_view"
        android:layout_width="116dp"
        android:layout_height="56dp"
        android:background="#FFDAAF"
        android:text="View"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="#8A5151"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.871" />


    <Button
        android:id="@+id/button_edit"
        android:layout_width="116dp"
        android:layout_height="56dp"
        android:background="#FFDAAF"
        android:text="Logout"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="#8A5151"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.871" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="126dp"
        android:layout_height="54dp"
        android:background="#FFDAAF"
        android:layout_marginEnd="10dp"
        android:text="Save"
        android:textSize="25dp"
        android:textAllCaps="false"
        android:textColor="#8A5151"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.868" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="375dp"
        android:layout_height="48dp"
        android:background="#CADDA9"
        android:text="Know some Healthy lifestyle"
        android:textAllCaps="false"
        android:textSize="22dp"
        android:textColor="#302E2E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.959" />


</androidx.constraintlayout.widget.ConstraintLayout>